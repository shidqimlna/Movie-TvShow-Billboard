<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkerWhite"
    tools:context=".view.fragment.TvShowFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_tvShow_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/fragment_tvShow_progressBar_layout"
        layout="@layout/progressbar_layout" />

    <include
        android:id="@+id/fragment_tvShow_warning_layout"
        layout="@layout/error_warning_layout" />

</FrameLayout>