<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkestWhite"
    tools:context=".ui.view.fragment.MovieFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_movie_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/fragment_movie_progressBar_layout"
        layout="@layout/progressbar_layout" />

    <include
        android:id="@+id/fragment_movie_warning_layout"
        layout="@layout/error_warning_layout" />

</FrameLayout>